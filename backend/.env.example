# Flask Configuration
FLASK_ENV=development
DEBUG=true

# Gemini Vision API (Optional - for better food detection)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_api_key_here

# Roboflow API (Optional - for food-specific ingredient detection)
# Uses serverless inference API - no model download needed
# Get your API key from: https://roboflow.com
ROBOFLOW_API_KEY=your_api_key_here

# Model Configuration
MODEL_YOLO=yolov8m
MODEL_LLM=gemma3:4b
YOLO_CONF_THRESHOLD=0.3
FOOD_MODEL_PATH=food_model.pt
USE_FOOD_MODEL=false

# Server Configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# File Upload
MAX_FILE_SIZE=25000000
UPLOAD_FOLDER=./uploads
ALLOWED_EXTENSIONS=jpg,jpeg,png,webp
